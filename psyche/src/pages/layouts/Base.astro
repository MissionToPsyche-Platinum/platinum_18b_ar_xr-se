---
const { title = "Psyche Hub" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <style>
      :root { color-scheme: dark light; }
      body { margin: 0; font: 16px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif; }
      .container { max-width: 960px; margin: 2rem auto; padding: 0 1rem; }
      header { margin-bottom: 1.5rem; }
      a { color: inherit; }
    </style>
  </head>
  <body>
    <div class="container">
      <header><h1>{title}</h1></header>
      <slot />
    </div>
  </body>
</html>
